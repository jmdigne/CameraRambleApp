<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lephotographel1.cameraramble.AboutFragment">

    <!-- TODO: Update blank fragment layout
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/hello_about_fragment"
        android:textAlignment="center" />
        -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="@string/hello_about_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_weight="1"
            android:textAlignment="center" />



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="176dp"
            app:srcCompat="@drawable/cameraramble_icon"
            android:id="@+id/imageView"
            android:layout_weight="1.30" />

        <TextView
            android:text="@string/message_about_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:layout_weight="1.86"
            android:textAlignment="center"
            android:textStyle="normal|bold" />
    </LinearLayout>
</FrameLayout>
